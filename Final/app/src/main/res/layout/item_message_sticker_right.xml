<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ctlContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_4"
        android:orientation="vertical">

        <include
            android:id="@+id/new_message"
            layout="@layout/item_new_message_header_chat" />

        <include
            android:id="@+id/time"
            layout="@layout/item_time_header_message" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_16"
            android:orientation="vertical"
            android:visibility="visible"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/ctlMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_4"
                android:orientation="vertical"
                android:visibility="visible"
                tools:ignore="UselessParent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/ctlMessageWrapper"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:ignore="UselessParent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    >

                    <RelativeLayout
                        android:id="@+id/rltVideo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginBottom="@dimen/dp_20"
                        android:adjustViewBounds="true"
                        android:background="@color/transparent"
                        android:orientation="horizontal"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <ImageView
                            android:id="@+id/ivSticker"
                            android:layout_width="@dimen/dp_132"
                            android:layout_height="@dimen/dp_132"
                            android:layout_gravity="right"
                            android:scaleType="centerCrop"
                            android:contentDescription="@string/description_place_image"
                            android:src="@drawable/ic_default"
                            tools:ignore="RtlHardcoded" />


                    </RelativeLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignStart="@+id/rltVideo"
                        android:layout_alignBottom="@+id/rltVideo"
                        android:layout_marginBottom="-20dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:visibility="visible"
                        app:layout_constraintTop_toBottomOf="@+id/rltVideo"
                        app:layout_constraintLeft_toLeftOf="@+id/rltVideo">

                        <vn.techres.line.widget.AppTextView
                            android:id="@+id/tvTime"
                            style="@style/ChatTimeStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_vertical"
                            android:background="@drawable/bg_time_text"
                            android:paddingStart="@dimen/dp_8"
                            android:paddingEnd="@dimen/dp_8"
                            android:textColor="@color/white"
                            android:layout_marginTop="2dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"/>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-12dp"
                        app:layout_constraintTop_toBottomOf="@+id/rltVideo"
                        app:layout_constraintRight_toRightOf="@+id/rltVideo">

                        <include
                            android:id="@+id/reaction"
                            layout="@layout/item_reaction_icon_message" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <LinearLayout
                    android:id="@+id/llView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toBottomOf="@+id/ctlMessageWrapper"
                    app:layout_constraintRight_toRightOf="parent">

                    <include
                        android:id="@+id/send"
                        layout="@layout/item_send_message" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rcvUserView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:visibility="gone"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

                    <LinearLayout
                        android:id="@+id/llUserView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="end"
                        android:orientation="horizontal"
                        android:paddingStart="1dp"
                        android:visibility="visible"
                        tools:ignore="UselessParent">

                        <vn.techres.line.widget.AppTextViewBold
                            android:id="@+id/tvMoreView"
                            style="@style/ChatTimeStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="@drawable/bg_user_view"
                            android:clickable="false"
                            android:duplicateParentState="true"
                            android:gravity="center"
                            android:paddingLeft="@dimen/dp_4"
                            android:paddingTop="@dimen/dp_1"
                            android:paddingRight="@dimen/dp_4"
                            android:paddingBottom="@dimen/dp_1"
                            android:textColor="@color/white"
                            android:visibility="visible" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>