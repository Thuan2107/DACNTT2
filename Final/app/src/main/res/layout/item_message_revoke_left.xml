<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_4"
        android:orientation="vertical">

        <include
            android:id="@+id/new_message"
            layout="@layout/item_new_message_header_chat" />

        <include
            android:id="@+id/time"
            layout="@layout/item_time_header_message" />

        <LinearLayout
            android:id="@+id/llMessageClick"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/dp_16"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/llAvatar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/ivAvatar"
                    android:layout_width="@dimen/dp_32"
                    android:layout_height="@dimen/dp_32"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_user_default" />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:orientation="horizontal"
                android:paddingStart="@dimen/dp_8">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/llMessage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dp_4"
                        android:background="@drawable/bg_chat_group_left"
                        tools:ignore="DuplicateIds">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="@dimen/dp_8">

                            <vn.techres.line.widget.AppTextViewBold
                                android:id="@+id/tvNameMedia"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:clickable="false"
                                android:duplicateParentState="true"
                                android:textColor="@color/gray_900"
                                android:textSize="@dimen/sp_14" />

                            <vn.techres.line.widget.AppTextView
                                android:id="@id/tvMessage"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/tvNameMedia"
                                android:layout_marginTop="@dimen/dp_1"
                                android:autoLink="web"
                                android:inputType="textMultiLine"
                                android:lineSpacingExtra="@dimen/dp_3"
                                android:maxWidth="@dimen/dp_260"
                                android:minWidth="@dimen/dp_50"
                                android:singleLine="false"
                                android:textColor="@color/text_last_message"
                                android:textColorLink="@color/color_link"
                                android:textSize="@dimen/sp_16" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/tvMessage"
                                android:orientation="horizontal">

                                <vn.techres.line.widget.AppTextView
                                    android:id="@+id/tvTime"
                                    style="@style/ChatTimeStyle"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:clickable="false"
                                    android:textColor="@color/gray_500"
                                    android:textSize="@dimen/sp_12" />
                            </LinearLayout>
                        </RelativeLayout>

                    </LinearLayout>

                </RelativeLayout>

            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>
</layout>