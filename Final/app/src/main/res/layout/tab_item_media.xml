<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:paddingVertical="@dimen/dp_8">

        <RelativeLayout
            android:layout_width="@dimen/dp_32"
            android:layout_height="@dimen/dp_32">

            <ImageView
                android:id="@+id/ivIcon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_gravity="center"
                android:padding="@dimen/dp_4"
                tools:srcCompat="@drawable/ic_file"
                android:contentDescription="@string/description_place_image" />

        </RelativeLayout>


        <com.hjq.shape.view.ShapeTextView
            android:id="@+id/tvTitle"
            android:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_14"
            app:shape_textColor="@color/orange_chat_view_page"
            app:shape_textSelectedColor="@color/black"
            tools:text="@string/titleFile"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/dp_8"/>


    </LinearLayout>
</layout>