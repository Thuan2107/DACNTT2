<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:id="@+id/llContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_16"
        android:orientation="vertical">

        <include
            android:id="@+id/time"
            layout="@layout/item_time_header_message" />

        <LinearLayout
            android:id="@+id/llMessage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="@dimen/dp_16"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivAvatar"
                android:layout_width="@dimen/dp_32"
                android:layout_height="@dimen/dp_32"
                android:layout_gravity="bottom"
                android:layout_marginBottom="@dimen/dp_18"
                android:contentDescription="@string/description_place_image"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_user_default" />

            <LinearLayout
                android:id="@+id/llText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_8"
                android:layout_weight="1"
                android:orientation="vertical">

                <vn.techres.line.widget.AppTextView
                    android:id="@+id/tvName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textMultiLine|textNoSuggestions"
                    android:paddingTop="@dimen/dp_8"
                    android:paddingEnd="@dimen/dp_8"
                    android:paddingBottom="@dimen/dp_4"
                    android:textColor="@color/gray_500"
                    android:textSize="@dimen/sp_14"
                    tools:text="Nguyễn Trọng Luân" />

                <LinearLayout
                    android:id="@+id/llContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_chat_group_left"
                    android:orientation="vertical"
                    android:padding="@dimen/dp_8">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_120"
                        android:layout_marginBottom="@dimen/dp_8"
                        android:elevation="0dp"
                        app:cardCornerRadius="@dimen/dp_8">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/dp_120"
                            tools:ignore="UselessParent">

                            <ImageView
                                android:id="@+id/ivCover"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop"
                                android:src="@drawable/ic_default"
                                tools:ignore="ContentDescription" />

                            <ImageView
                                android:id="@+id/ivAvatarBrand"
                                android:layout_width="@dimen/dp_40"
                                android:layout_height="@dimen/dp_40"
                                android:layout_alignParentStart="true"
                                android:layout_alignParentBottom="true"
                                android:layout_marginStart="@dimen/dp_8"
                                android:layout_marginBottom="@dimen/dp_8"
                                android:src="@drawable/ic_brand_default"
                                tools:ignore="ContentDescription" />

                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>

                    <com.aghajari.emojiview.view.AXEmojiTextView
                        android:id="@+id/tvTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dp_8"
                        android:autoLink="web"
                        android:ellipsize="end"
                        android:gravity="start"
                        android:maxLines="2"
                        android:textColor="@color/gray_900"
                        android:textColorLink="@color/color_link"
                        android:textSize="@dimen/sp_14"
                        android:textStyle="bold"
                        app:emojiSize="@dimen/dp_18"
                        tools:text="123-Zô | Mua một combo 3tr tặng một chuyến du lịch Châu Âu và cuộc gặp gỡ Idol Lionel Messi miễn phí mà ko cần chi 60 tỷ!!!" />

                    <com.aghajari.emojiview.view.AXEmojiTextView
                        android:id="@+id/tvDescription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dp_8"
                        android:autoLink="web"
                        android:ellipsize="end"
                        android:gravity="start"
                        android:maxLines="5"
                        android:textColor="@color/gray_900"
                        android:textColorLink="@color/color_link"
                        android:textSize="@dimen/sp_12"
                        app:emojiSize="@dimen/dp_18"
                        tools:text="Đây là quà tặng đến từ chương trình mua 1 tặng 1 của Nhà hàng 123-Zô nhân dịp quán khai trương chi nhánh mới và là dịp sinh nhật thứ 10 của thương hiệu nhà hàng quán nhậu số 1 Việt Nam. Ngoài ra nhà hàng còn tặng thêm cho các khác hàng lâu năm của quán nhiều phần quà hấp dẫn." />

                    <LinearLayout
                        android:id="@+id/llTimeStart"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:visibility="visible">

                        <vn.techres.line.widget.AppTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="start"
                            android:text="@string/start_at"
                            android:textColor="@color/gray_900"
                            android:textSize="@dimen/sp_12" />

                        <vn.techres.line.widget.AppTextView
                            android:id="@+id/tvTimeStart"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp_4"
                            android:layout_weight="1"
                            android:gravity="start"
                            android:textColor="@color/gray_900"
                            android:textSize="@dimen/sp_12"
                            tools:text="14:00 19/09/2023" />

                    </LinearLayout>

                </LinearLayout>

                <vn.techres.line.widget.AppTextView
                    android:id="@+id/tvTime"
                    style="@style/ChatTimeStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_4"
                    android:clickable="false"
                    android:minWidth="@dimen/dp_12"
                    android:textColor="@color/gray_500"
                    android:textSize="@dimen/sp_12"
                    android:visibility="visible"
                    tools:text="09:30" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</layout>