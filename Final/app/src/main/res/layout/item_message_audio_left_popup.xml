<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:id="@+id/llMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginBottom="@dimen/dp_4"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/llAvatar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom">

            <ImageView
                android:id="@+id/ivAvatar"
                android:layout_width="@dimen/dp_32"
                android:layout_height="@dimen/dp_32"
                android:contentDescription="@string/description_place_image"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_user_default" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:orientation="vertical"
            android:paddingStart="@dimen/dp_8"
            tools:ignore="RtlSymmetry,UselessParent">

            <vn.techres.line.widget.AppTextViewBold
                android:id="@+id/tvNameMedia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_4"
                android:background="@drawable/border_gray_100"
                android:inputType="textMultiLine|textNoSuggestions"
                android:paddingHorizontal="@dimen/dp_8"
                android:paddingVertical="@dimen/dp_2"
                android:textColor="@color/gray_900"
                android:textSize="@dimen/sp_14"
                tools:text="Tên người chat" />

            <LinearLayout
                android:id="@+id/rltVideo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:background="@drawable/bg_chat_group_left"
                android:orientation="vertical"
                android:paddingHorizontal="@dimen/dp_16"
                android:paddingTop="@dimen/dp_14"
                android:paddingBottom="@dimen/dp_10">

                <include
                    android:id="@+id/audio"
                    layout="@layout/item_message_audio" />

                <vn.techres.line.widget.AppTextView
                    android:id="@+id/tvTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_4"
                    android:gravity="center_vertical"
                    android:textColor="@color/gray_600"
                    android:textSize="@dimen/sp_12"
                    android:visibility="visible"
                    tools:text="09:35" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</layout>