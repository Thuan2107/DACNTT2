<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:id="@+id/llContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_4"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginEnd="@dimen/dp_16"
            android:orientation="vertical"
            android:visibility="visible"
            tools:ignore="RtlSymmetry,UselessParent">

            <LinearLayout
                android:id="@+id/llText"
                android:layout_width="@dimen/dp_270"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_chat_group_right">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:orientation="vertical">

                    <com.aghajari.emojiview.view.AXEmojiTextView
                        android:id="@id/tvMessage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:autoLink="web"
                        android:lineSpacingExtra="@dimen/dp_3"
                        android:maxWidth="@dimen/dp_260"
                        android:minWidth="@dimen/dp_65"
                        android:padding="@dimen/dp_8"
                        android:textColor="@color/color_text_chat"
                        android:textColorLink="@color/color_link"
                        android:textSize="@dimen/sp_16"
                        app:emojiSize="@dimen/dp_20"
                        tools:text="Link ở đây" />

                    <LinearLayout
                        android:id="@+id/llLink"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tvMessage"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/llNewFeedLinkPost"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:visibility="visible">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dp_100"
                                android:layout_gravity="center">

                                <ImageView
                                    android:id="@+id/ivMediaThumbPost"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:maxHeight="@dimen/dp_240"
                                    tools:ignore="ContentDescription,TooDeepLayout" />

                                <ImageView
                                    android:id="@+id/youtube"
                                    android:layout_width="@dimen/dp_48"
                                    android:layout_height="@dimen/dp_48"
                                    android:layout_centerInParent="true"
                                    android:src="@drawable/ic_youtube"
                                    android:visibility="gone"
                                    tools:ignore="ContentDescription" />
                            </RelativeLayout>

                            <vn.techres.line.widget.AppTextViewBold
                                android:id="@+id/tvMediaTitlePost"
                                style="@style/LinkTitle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="@dimen/dp_8"
                                android:layout_marginEnd="@dimen/dp_8"
                                android:clickable="false"
                                android:ellipsize="end"
                                android:inputType="textMultiLine|textNoSuggestions"
                                android:longClickable="false"
                                android:paddingTop="@dimen/dp_8" />

                            <vn.techres.line.widget.AppTextView
                                android:id="@+id/tvMediaSubTitlePost"
                                style="@style/LinkSubTitle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="@dimen/dp_8"
                                android:layout_marginEnd="@dimen/dp_8"
                                android:clickable="false"
                                android:ellipsize="end"
                                android:inputType="textMultiLine|textNoSuggestions"
                                android:longClickable="false"
                                android:paddingBottom="@dimen/dp_8"
                                android:textColor="@color/black" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <vn.techres.line.widget.AppTextView
                                android:id="@+id/tvTime"
                                style="@style/ChatTimeStyle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:minWidth="@dimen/sp_12"
                                android:paddingStart="@dimen/dp_8"
                                android:paddingEnd="@dimen/dp_8"
                                android:paddingBottom="@dimen/dp_8"
                                android:textColor="@color/color_time_chat"
                                android:textSize="@dimen/sp_12"
                                tools:text="15:39" />
                        </LinearLayout>

                    </LinearLayout>

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</layout>