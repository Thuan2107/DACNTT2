<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:id="@+id/llMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dp_16"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/llAvatar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="@dimen/dp_8">

            <ImageView
                android:id="@+id/ivAvatar"
                android:layout_width="@dimen/dp_32"
                android:layout_height="@dimen/dp_32"
                android:contentDescription="@string/description_place_image"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_user_default" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:orientation="vertical"
            android:layout_marginStart="@dimen/dp_8">

            <vn.techres.line.widget.AppTextViewBold
                android:id="@+id/tvNameMedia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_4"
                android:background="@drawable/border_gray_100"
                android:inputType="textMultiLine|textNoSuggestions"
                android:paddingHorizontal="@dimen/dp_8"
                android:paddingVertical="@dimen/dp_2"
                android:textColor="@color/gray_900"
                android:textSize="@dimen/sp_14"
                tools:text="Tên người chat" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/rltVideo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:background="@drawable/bg_chat_group_left"
                    android:orientation="horizontal"
                    android:padding="@dimen/dp_16">

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_chat_group_image"
                        app:cardCornerRadius="@dimen/dp_8"
                        app:cardElevation="0dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            tools:viewBindingIgnore="true">

                            <ImageView
                                android:id="@+id/ivOneOne"
                                android:layout_width="@dimen/dp_180"
                                android:layout_height="@dimen/dp_180"
                                android:adjustViewBounds="true"
                                android:contentDescription="@string/description_place_image"
                                android:maxWidth="@dimen/dp_180"
                                android:scaleType="centerCrop"
                                android:src="@drawable/ic_default" />

                            <ImageView
                                android:id="@+id/ivPlay"
                                android:layout_width="@dimen/dp_32"
                                android:layout_height="@dimen/dp_32"
                                android:layout_centerInParent="true"
                                android:src="@drawable/play_video"
                                android:visibility="visible"
                                tools:ignore="ContentDescription" />
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_4"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:visibility="visible">

                    <vn.techres.line.widget.AppTextView
                        android:id="@+id/tvTime"
                        style="@style/ChatTimeStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/bg_time_text"
                        android:paddingStart="@dimen/dp_8"
                        android:paddingEnd="@dimen/dp_8"
                        android:textColor="@color/white"
                        tools:text="15:39" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</layout>