<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dp_16"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/llAvatar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="@dimen/dp_8">

            <ImageView
                android:id="@+id/ivAvatar"
                android:layout_width="@dimen/dp_32"
                android:layout_height="@dimen/dp_32"
                android:contentDescription="@string/description_place_image"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_user_default" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_8"
            android:gravity="start"
            android:orientation="vertical"
            tools:ignore="RtlSymmetry,UselessParent">

            <vn.techres.line.widget.AppTextViewBold
                android:id="@+id/tvNameMedia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_4"
                android:background="@drawable/border_gray_100"
                android:inputType="textMultiLine|textNoSuggestions"
                android:paddingHorizontal="@dimen/dp_8"
                android:paddingVertical="@dimen/dp_2"
                android:textColor="@color/gray_900"
                android:textSize="@dimen/sp_14"
                tools:text="Tên người chat" />

            <LinearLayout
                android:id="@+id/llText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/llContent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/llFile"
                        android:layout_width="@dimen/dp_200"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_chat_group_left"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="@dimen/dp_8">

                        <ImageView
                            android:id="@+id/ivTypeFile"
                            android:layout_width="@dimen/dp_24"
                            android:layout_height="@dimen/dp_32"
                            android:layout_gravity="center"
                            android:contentDescription="@string/description_place_image"
                            android:src="@drawable/icon_file_word"
                            tools:ignore="TooDeepLayout" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:orientation="vertical">

                            <vn.techres.line.widget.AppTextView
                                android:id="@+id/tvNameFile"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/dp_8"
                                android:duplicateParentState="true"
                                android:ellipsize="end"
                                android:lineSpacingExtra="@dimen/dp_2"
                                android:maxWidth="@dimen/dp_200"
                                android:maxLines="1"
                                android:minWidth="@dimen/dp_50"
                                android:textColor="@color/black"
                                android:textSize="@dimen/sp_12" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/dp_8"
                                android:layout_marginTop="@dimen/dp_8">

                                <vn.techres.line.widget.AppTextView
                                    android:id="@+id/tvTypeFile"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:clickable="false"
                                    android:duplicateParentState="true"
                                    android:gravity="center"
                                    android:textColor="@color/gray_text_title"
                                    android:textSize="@dimen/sp_12"
                                    app:textAllCaps="true" />

                                <vn.techres.line.widget.AppTextView
                                    android:id="@+id/imgDot"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginStart="@dimen/dp_3"
                                    android:layout_marginEnd="@dimen/dp_3"
                                    android:clickable="false"
                                    android:duplicateParentState="true"
                                    android:gravity="center"
                                    android:text="@string/dot"
                                    android:textColor="@color/gray_text_title"
                                    android:textSize="@dimen/sp_10" />

                                <vn.techres.line.widget.AppTextView
                                    android:id="@+id/tvSizeFile"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:clickable="false"
                                    android:duplicateParentState="true"
                                    android:gravity="center"
                                    android:textColor="@color/gray_text_title"
                                    android:textSize="@dimen/sp_12" />

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_4"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:visibility="visible">

                        <vn.techres.line.widget.AppTextView
                            android:id="@+id/tvTime"
                            style="@style/ChatTimeStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_vertical"
                            android:background="@drawable/bg_time_text"
                            android:paddingStart="@dimen/dp_8"
                            android:paddingEnd="@dimen/dp_8"
                            android:textColor="@color/white"
                            tools:text="15:39" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</layout>