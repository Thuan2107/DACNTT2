<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_4"
        android:orientation="vertical">

        <include
            android:id="@+id/new_message"
            layout="@layout/item_new_message_header_chat" />

        <include
            android:id="@+id/time"
            layout="@layout/item_time_header_message" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:paddingTop="@dimen/dp_8"
            android:paddingBottom="@dimen/dp_8"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:background="@drawable/bg_main_notification"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingHorizontal="@dimen/dp_4"
                android:paddingVertical="@dimen/dp_8"
                tools:ignore="UselessParent">

                <vn.techres.line.widget.AppTextView
                    android:id="@+id/tvMessagePinned"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxWidth="@dimen/dp_336"
                    android:layout_gravity="center_vertical"
                    android:drawableStart="@drawable/ic_pin_line"
                    android:drawablePadding="@dimen/dp_2"
                    android:gravity="center_vertical|start"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:textColor="@color/color_text_chat"
                    android:textColorLink="@color/color_text_chat"
                    android:textSize="@dimen/sp_12" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</layout>