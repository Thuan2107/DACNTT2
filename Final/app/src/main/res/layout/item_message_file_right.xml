<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ctlContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_4"
        android:orientation="vertical">

        <include
            android:id="@+id/new_message"
            layout="@layout/item_new_message_header_chat" />

        <include
            android:id="@+id/time"
            layout="@layout/item_time_header_message" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ctlMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginEnd="@dimen/dp_16"
            android:orientation="vertical"
            android:visibility="visible"
            tools:ignore="RtlSymmetry,UselessParent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:orientation="horizontal"
                tools:ignore="UselessParent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/ctlText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintRight_toRightOf="parent">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/ctlContent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintRight_toRightOf="parent">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintRight_toRightOf="parent">

                            <LinearLayout
                                android:id="@+id/llImageOne"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:visibility="gone"
                                app:layout_constraintDimensionRatio="1:1"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintRight_toRightOf="parent"
                                app:layout_constraintTop_toTopOf="parent">

                                <androidx.cardview.widget.CardView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/bg_chat_group_image"
                                    app:cardCornerRadius="@dimen/dp_8"
                                    app:cardElevation="0dp">

                                    <ImageView
                                        android:id="@+id/ivOneOne"
                                        android:layout_width="@dimen/dp_150"
                                        android:layout_height="@dimen/dp_220"
                                        android:adjustViewBounds="true"
                                        android:contentDescription="@string/description_place_image"
                                        android:scaleType="centerCrop"
                                        tools:ignore="TooDeepLayout" />

                                </androidx.cardview.widget.CardView>


                            </LinearLayout>

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignBottom="@+id/llImageOne"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintRight_toRightOf="parent">

                                <LinearLayout
                                    android:id="@+id/llFile"
                                    android:layout_width="@dimen/dp_200"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/bg_chat_group_right"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal"
                                    android:padding="@dimen/dp_8"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintRight_toRightOf="parent">

                                    <ImageView
                                        android:id="@+id/ivTypeFile"
                                        android:layout_width="@dimen/dp_24"
                                        android:layout_height="@dimen/dp_32"
                                        android:layout_gravity="center"
                                        android:contentDescription="@string/description_place_image"
                                        android:src="@drawable/icon_file_word" />

                                    <LinearLayout
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:gravity="center_vertical"
                                        android:orientation="vertical">

                                        <vn.techres.line.widget.AppTextView
                                            android:id="@+id/tvNameFile"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginStart="@dimen/dp_8"
                                            android:duplicateParentState="true"
                                            android:ellipsize="end"
                                            android:lineSpacingExtra="@dimen/dp_2"
                                            android:maxWidth="@dimen/dp_200"
                                            android:maxLines="1"
                                            android:minWidth="@dimen/dp_50"
                                            android:textColor="@color/black"
                                            android:textColorLink="@color/color_link"
                                            android:textSize="@dimen/sp_12" />

                                        <LinearLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginStart="@dimen/dp_8"
                                            android:layout_marginTop="@dimen/dp_8">

                                            <vn.techres.line.widget.AppTextView
                                                android:id="@+id/tvTypeFile"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_gravity="center"
                                                android:clickable="false"
                                                android:duplicateParentState="true"
                                                android:gravity="center"
                                                android:textColor="@color/gray_text_title"
                                                android:textSize="@dimen/sp_12"
                                                app:textAllCaps="true" />

                                            <vn.techres.line.widget.AppTextView
                                                android:id="@+id/ivDot"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_gravity="center"
                                                android:layout_marginStart="@dimen/dp_3"
                                                android:layout_marginEnd="@dimen/dp_3"
                                                android:clickable="false"
                                                android:duplicateParentState="true"
                                                android:gravity="center"
                                                android:text="•"
                                                android:textColor="@color/gray_text_title"
                                                android:textSize="@dimen/sp_10"
                                                tools:ignore="HardcodedText" />

                                            <vn.techres.line.widget.AppTextView
                                                android:id="@+id/tvSizeFile"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_gravity="center"
                                                android:clickable="false"
                                                android:duplicateParentState="true"
                                                android:gravity="center"
                                                android:textColor="@color/gray_text_title"
                                                android:textSize="@dimen/sp_12" />
                                        </LinearLayout>
                                    </LinearLayout>

                                    <ImageView
                                        android:id="@+id/tvOpen"
                                        style="@style/ImageButtonStyleCustom"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="@dimen/dp_16"
                                        android:contentDescription="@string/description_place_image"
                                        android:src="@drawable/ic_download_line_circle_pressed"
                                        android:visibility="visible" />

                                    <vn.techres.line.widget.AppTextView
                                        android:id="@+id/tvOpenFile"
                                        android:layout_width="@dimen/dp_35"
                                        android:layout_height="@dimen/dp_35"
                                        android:layout_marginStart="@dimen/dp_16"
                                        android:background="@drawable/ic_open_line_corner_pressed"
                                        android:elevation="0dp"
                                        android:gravity="center"
                                        android:outlineProvider="none"
                                        android:text="@string/open"
                                        android:textColor="@color/black"
                                        android:textSize="@dimen/sp_10"
                                        android:visibility="gone" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignEnd="@+id/llFile"
                                    android:layout_alignBottom="@+id/llFile"
                                    android:layout_marginTop="-12dp"
                                    app:layout_constraintTop_toBottomOf="@+id/llFile"
                                    app:layout_constraintRight_toRightOf="parent">

                                    <include
                                        android:id="@+id/reaction"
                                        layout="@layout/item_reaction_icon_message" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/llFile"
                                    android:layout_alignStart="@+id/llFile"
                                    android:layout_marginTop="@dimen/dp_4"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal"
                                    app:layout_constraintTop_toBottomOf="@+id/llFile"
                                    app:layout_constraintLeft_toLeftOf="parent">

                                    <vn.techres.line.widget.AppTextView
                                        android:id="@+id/tvTime"
                                        style="@style/ChatTimeStyle"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_vertical"
                                        android:background="@drawable/bg_time_text"
                                        android:paddingHorizontal="@dimen/dp_8"
                                        android:textColor="@color/white"
                                        tools:text="09:35" />

                                    <vn.techres.line.widget.AppTextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_vertical"
                                        android:visibility="invisible"
                                        tools:text="09:35" />

                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/llView"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/llFile"
                                    android:layout_alignEnd="@+id/llFile"
                                    android:layout_gravity="end"
                                    android:layout_marginTop="@dimen/dp_14"
                                    android:gravity="center_vertical"
                                    android:orientation="horizontal"
                                    app:layout_constraintTop_toBottomOf="@+id/llFile"
                                    app:layout_constraintRight_toRightOf="parent">

                                    <include
                                        android:id="@+id/send"
                                        layout="@layout/item_send_message" />

                                    <androidx.recyclerview.widget.RecyclerView
                                        android:id="@+id/rcvUserView"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal"
                                        android:visibility="gone"
                                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

                                    <LinearLayout
                                        android:id="@+id/llUserView"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:gravity="end"
                                        android:orientation="horizontal"
                                        android:paddingStart="@dimen/dp_1"
                                        android:visibility="gone"
                                        tools:ignore="RtlSymmetry,UselessParent">

                                        <vn.techres.line.widget.AppTextView
                                            android:id="@+id/tvMoreView"
                                            style="@style/ChatTimeStyle"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center"
                                            android:background="@drawable/bg_user_view"
                                            android:clickable="false"
                                            android:duplicateParentState="true"
                                            android:gravity="center"
                                            android:paddingLeft="@dimen/dp_4"
                                            android:paddingTop="@dimen/dp_1"
                                            android:paddingRight="@dimen/dp_4"
                                            android:paddingBottom="@dimen/dp_1"
                                            android:textColor="@color/white"
                                            android:visibility="visible" />

                                    </LinearLayout>

                                </LinearLayout>

                            </androidx.constraintlayout.widget.ConstraintLayout>

                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>