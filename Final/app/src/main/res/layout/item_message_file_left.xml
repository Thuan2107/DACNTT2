<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ctlContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_4"
        android:orientation="vertical">

        <include
            android:id="@+id/new_message"
            layout="@layout/item_new_message_header_chat" />

        <include
            android:id="@+id/time"
            layout="@layout/item_time_header_message" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="@dimen/dp_16"
            android:orientation="horizontal"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent">

            <LinearLayout
                android:id="@+id/llAvatar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginBottom="@dimen/dp_10"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent">

                <ImageView
                    android:id="@+id/ivAvatar"
                    android:layout_width="@dimen/dp_32"
                    android:layout_height="@dimen/dp_32"
                    android:contentDescription="@string/description_place_image"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_user_default" />

            </LinearLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_8"
                android:gravity="start"
                android:orientation="vertical"
                tools:ignore="RtlSymmetry,UselessParent"
                app:layout_constraintLeft_toRightOf="@+id/llAvatar"
                app:layout_constraintBottom_toBottomOf="parent">

                <vn.techres.line.widget.AppTextViewBold
                    android:id="@+id/tvNameMedia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_4"
                    android:background="@drawable/border_gray_100"
                    android:inputType="textMultiLine|textNoSuggestions"
                    android:paddingHorizontal="@dimen/dp_8"
                    android:paddingVertical="@dimen/dp_2"
                    android:textColor="@color/gray_900"
                    android:textSize="@dimen/sp_14"
                    tools:text="Tên người chat"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"/>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/ctlContent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintTop_toBottomOf="@+id/tvNameMedia"
                    app:layout_constraintLeft_toLeftOf="parent">

                    <LinearLayout
                        android:id="@+id/llImageOne"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone"
                        app:layout_constraintDimensionRatio="1:1"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_chat_group_image"
                            app:cardCornerRadius="@dimen/dp_8"
                            app:cardElevation="0dp">

                            <ImageView
                                android:id="@+id/ivOneOne"
                                android:layout_width="@dimen/dp_150"
                                android:layout_height="@dimen/dp_220"
                                android:adjustViewBounds="true"
                                android:contentDescription="@string/description_place_image"
                                android:scaleType="centerCrop"
                                tools:ignore="TooDeepLayout" />

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/ctlContainerFile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/llImageOne"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent">

                        <LinearLayout
                            android:id="@+id/llFile"
                            android:layout_width="@dimen/dp_200"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_chat_group_left"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:padding="@dimen/dp_8"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                            <ImageView
                                android:id="@+id/ivTypeFile"
                                android:layout_width="@dimen/dp_24"
                                android:layout_height="@dimen/dp_32"
                                android:layout_gravity="center"
                                android:contentDescription="@string/description_place_image"
                                android:src="@drawable/icon_file_word" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:orientation="vertical">

                                <vn.techres.line.widget.AppTextView
                                    android:id="@+id/tvNameFile"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/dp_8"
                                    android:duplicateParentState="true"
                                    android:ellipsize="end"
                                    android:lineSpacingExtra="@dimen/dp_2"
                                    android:maxWidth="@dimen/dp_200"
                                    android:maxLines="1"
                                    android:minWidth="@dimen/dp_50"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/sp_12"
                                    tools:ignore="TooDeepLayout" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/dp_8"
                                    android:layout_marginTop="@dimen/dp_8">

                                    <vn.techres.line.widget.AppTextView
                                        android:id="@+id/tvTypeFile"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:clickable="false"
                                        android:duplicateParentState="true"
                                        android:gravity="center"
                                        android:textColor="@color/gray_text_title"
                                        android:textSize="@dimen/sp_12"
                                        app:textAllCaps="true" />

                                    <vn.techres.line.widget.AppTextView
                                        android:id="@+id/imgDot"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:layout_marginStart="@dimen/dp_3"
                                        android:layout_marginEnd="@dimen/dp_3"
                                        android:clickable="false"
                                        android:duplicateParentState="true"
                                        android:gravity="center"
                                        android:text="@string/dot"
                                        android:textColor="@color/gray_text_title"
                                        android:textSize="@dimen/sp_10" />

                                    <vn.techres.line.widget.AppTextView
                                        android:id="@+id/tvSizeFile"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:clickable="false"
                                        android:duplicateParentState="true"
                                        android:gravity="center"
                                        android:textColor="@color/gray_text_title"
                                        android:textSize="@dimen/sp_12" />
                                </LinearLayout>
                            </LinearLayout>

                            <ImageView
                                android:id="@+id/tvOpen"
                                style="@style/ImageButtonStyleCustom"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/dp_16"
                                android:contentDescription="@string/description_place_image"
                                android:src="@drawable/ic_download_line_circle_pressed"
                                android:visibility="visible" />

                            <vn.techres.line.widget.AppTextView
                                android:id="@+id/tvOpenFile"
                                android:layout_width="@dimen/dp_35"
                                android:layout_height="@dimen/dp_35"
                                android:layout_marginStart="@dimen/dp_16"
                                android:background="@drawable/ic_open_line_corner_pressed"
                                android:elevation="0dp"
                                android:gravity="center"
                                android:outlineProvider="none"
                                android:text="@string/open"
                                android:textColor="@color/black"
                                android:textSize="@dimen/sp_10"
                                android:visibility="gone" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_4"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:visibility="visible"
                            app:layout_constraintStart_toStartOf="@+id/llFile"
                            app:layout_constraintTop_toBottomOf="@+id/llFile">

                            <vn.techres.line.widget.AppTextView
                                android:id="@+id/tvTime"
                                style="@style/ChatTimeStyle"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_gravity="center_vertical"
                                android:background="@drawable/bg_time_text"
                                android:paddingHorizontal="@dimen/dp_8"
                                android:textColor="@color/white"
                                tools:text="15:39" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignEnd="@+id/llFile"
                            android:layout_marginTop="@dimen/dp_m_10"
                            app:layout_constraintEnd_toEndOf="@+id/llFile"
                            app:layout_constraintTop_toBottomOf="@+id/llFile">

                            <include
                                android:id="@+id/reaction"
                                layout="@layout/item_reaction_icon_message" />

                        </LinearLayout>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>