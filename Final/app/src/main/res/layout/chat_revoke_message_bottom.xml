<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/ayp_8dp"
                android:layout_marginTop="@dimen/dp_8"
                android:layout_marginEnd="@dimen/ayp_8dp"
                android:layout_marginBottom="4dp"
                android:layout_weight="1"
                android:background="@drawable/reaction_popup_shadow"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/like_item"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/transparent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/dp_16"
                    android:paddingTop="@dimen/dp_8"
                    android:paddingBottom="@dimen/dp_8"
                    android:src="@drawable/ic_like"
                    tools:ignore="NestedWeights" />

                <ImageButton
                    android:id="@+id/love_item"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/transparent"
                    android:gravity="center"
                    android:padding="@dimen/ayp_8dp"
                    android:src="@drawable/ic_heart" />

                <ImageButton
                    android:id="@+id/smile_item"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/transparent"
                    android:gravity="center"
                    android:padding="@dimen/ayp_8dp"
                    android:src="@drawable/ic_smile" />

                <ImageButton
                    android:id="@+id/wow_item"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/transparent"
                    android:gravity="center"
                    android:padding="@dimen/ayp_8dp"
                    android:src="@drawable/ic_wow" />

                <ImageButton
                    android:id="@+id/angry_item"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/transparent"
                    android:gravity="center"
                    android:padding="@dimen/ayp_8dp"
                    android:src="@drawable/ic_angry" />

                <ImageButton
                    android:id="@+id/sad_item"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/transparent"
                    android:gravity="center"
                    android:paddingLeft="@dimen/ayp_8dp"
                    android:paddingTop="@dimen/ayp_8dp"
                    android:paddingRight="@dimen/dp_16"
                    android:paddingBottom="@dimen/ayp_8dp"
                    android:src="@drawable/ic_sad" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/revokeReaction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="@dimen/dp_8"
                android:layout_marginEnd="@dimen/ayp_8dp"
                android:layout_marginBottom="4dp"
                android:background="@drawable/ic_revoke_reaction"
                android:orientation="horizontal" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_8"
            android:background="@drawable/bg_border_reaction_popup_chat_white"
            android:orientation="vertical"
            android:paddingBottom="@dimen/dp_8">

            <vn.techres.line.widget.AppTextView
                android:id="@+id/txtUserReaction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="@dimen/ayp_8dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginStart="@dimen/ayp_8dp"
                android:layout_marginEnd="@dimen/ayp_8dp"
                android:background="@color/gray_300" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/lnAlL"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:padding="@dimen/ayp_8dp">

                            <ImageView
                                android:layout_width="0dp"
                                android:layout_height="@dimen/dp_24"
                                android:layout_gravity="center"
                                tools:ignore="Suspicious0dp" />

                            <vn.techres.line.widget.AppTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="@string/all"
                                android:textSize="@dimen/sp_12" />

                            <vn.techres.line.widget.AppTextView
                                android:id="@+id/txtCountAll"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/dp_4"
                                android:gravity="center" />
                        </LinearLayout>

                        <View
                            android:id="@+id/viewAll"
                            android:layout_width="match_parent"
                            android:layout_height="2dp"
                            android:layout_gravity="center"
                            android:layout_marginStart="@dimen/ayp_8dp"
                            android:layout_marginEnd="@dimen/ayp_8dp"
                            android:background="@color/main_bg"
                            android:visibility="gone" />
                    </LinearLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rcvReaction"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </LinearLayout>

            </HorizontalScrollView>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rclEmojiRevoke"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/dp_8"
                android:paddingBottom="@dimen/dp_8" />
        </LinearLayout>
    </LinearLayout>
</layout>