<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:id="@+id/llMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginEnd="@dimen/dp_16"
        android:orientation="vertical"
        android:visibility="visible"
        tools:ignore="RtlSymmetry,UselessParent">

        <LinearLayout
            android:id="@+id/llText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/llFile"
                android:layout_width="@dimen/dp_200"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_chat_group_right"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/dp_8">

                <ImageView
                    android:id="@+id/ivTypeFile"
                    android:layout_width="@dimen/dp_24"
                    android:layout_height="@dimen/dp_32"
                    android:layout_gravity="center"
                    android:contentDescription="@string/description_place_image"
                    android:src="@drawable/icon_file_word" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <vn.techres.line.widget.AppTextView
                        android:id="@+id/tvNameFile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_8"
                        android:duplicateParentState="true"
                        android:ellipsize="end"
                        android:lineSpacingExtra="@dimen/dp_2"
                        android:maxWidth="@dimen/dp_200"
                        android:maxLines="1"
                        android:minWidth="@dimen/dp_50"
                        android:textColor="@color/black"
                        android:textColorLink="@color/color_link"
                        android:textSize="@dimen/sp_12" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_8"
                        android:layout_marginTop="@dimen/dp_8">

                        <vn.techres.line.widget.AppTextView
                            android:id="@+id/tvTypeFile"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:clickable="false"
                            android:duplicateParentState="true"
                            android:gravity="center"
                            android:textColor="@color/gray_text_title"
                            android:textSize="@dimen/sp_12"
                            app:textAllCaps="true"
                            tools:ignore="TooDeepLayout" />

                        <vn.techres.line.widget.AppTextView
                            android:id="@+id/ivDot"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="@dimen/dp_3"
                            android:layout_marginEnd="@dimen/dp_3"
                            android:clickable="false"
                            android:duplicateParentState="true"
                            android:gravity="center"
                            android:text="â€¢"
                            android:textColor="@color/gray_text_title"
                            android:textSize="@dimen/sp_10"
                            tools:ignore="HardcodedText" />

                        <vn.techres.line.widget.AppTextView
                            android:id="@+id/tvSizeFile"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:clickable="false"
                            android:duplicateParentState="true"
                            android:gravity="center"
                            android:textColor="@color/gray_text_title"
                            android:textSize="@dimen/sp_12" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <vn.techres.line.widget.AppTextView
                android:id="@+id/tvTime"
                style="@style/ChatTimeStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="@dimen/dp_4"
                android:background="@drawable/bg_time_text"
                android:paddingHorizontal="@dimen/dp_8"
                android:textColor="@color/white"
                tools:text="09:35" />

        </LinearLayout>

    </LinearLayout>
</layout>