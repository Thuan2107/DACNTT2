<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_300" />

        <RelativeLayout
            android:id="@+id/rlnLink"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:paddingStart="@dimen/dp_8"
            android:paddingEnd="@dimen/dp_8">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@+id/chat_attachment_link_delete"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/linkThumb"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:visibility="visible"
                    tools:ignore="UselessParent">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cvAvatar"
                        android:layout_width="@dimen/dp_80"
                        android:layout_height="@dimen/dp_80"
                        android:layout_marginHorizontal="@dimen/dp_8"
                        android:layout_marginTop="@dimen/dp_12"
                        android:layout_marginBottom="@dimen/dp_8"
                        app:cardCornerRadius="@dimen/dp_16"
                        app:cardElevation="0dp">

                        <ImageView
                            android:id="@+id/chat_attachment_link_photo"
                            android:layout_width="@dimen/dp_80"
                            android:layout_height="@dimen/dp_80"
                            tools:ignore="ContentDescription"
                            tools:src="@drawable/ic_default" />

                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/dp_8"
                        android:orientation="vertical">

                        <vn.techres.line.widget.AppTextView
                            android:id="@+id/tvTitleLink"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:textColor="@color/gray_500"
                            android:textSize="@dimen/sp_12"
                            tools:text="https://aloline.vn" />

                        <vn.techres.line.widget.AppTextViewBold
                            android:id="@+id/chat_attachment_link_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:maxLines="3"
                            android:textColor="@color/black"
                            android:textSize="@dimen/sp_16"
                            tools:text="Aloline" />

                        <vn.techres.line.widget.AppTextView
                            android:id="@+id/chat_attachment_link_description"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:textColor="@color/black"
                            android:textSize="@dimen/sp_16"
                            tools:text="Mạng xã hội cho các tín đồ ẩm thực" />

                    </LinearLayout>

                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/loadingLinkThumb"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_150"
                    android:background="@color/transparent"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="@dimen/dp_32"
                        android:layout_height="@dimen/dp_32"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_loading_logo"
                        tools:ignore="ContentDescription" />

                    <com.airbnb.lottie.LottieAnimationView
                        android:layout_width="@dimen/dp_140"
                        android:layout_height="@dimen/dp_140"
                        android:layout_centerInParent="true"
                        app:lottie_autoPlay="true"
                        app:lottie_loop="true"
                        app:lottie_rawRes="@raw/loading_aloline" />

                </RelativeLayout>

            </LinearLayout>

            <ImageView
                android:id="@+id/chat_attachment_link_delete"
                android:layout_width="@dimen/dp_24"
                android:layout_height="@dimen/dp_24"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="@dimen/dp_8"
                android:layout_marginTop="@dimen/dp_8"
                android:clickable="true"
                android:focusable="true"
                app:srcCompat="@drawable/ic_remove"
                tools:ignore="ContentDescription" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/rlnLinkClip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_8"
            android:background="@drawable/border_white_5dp"
            android:orientation="vertical"
            android:visibility="gone">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <LinearLayout
                    android:id="@+id/linkThumbClip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toStartOf="@+id/chat_attachment_link_deleteClip"
                    android:orientation="horizontal"
                    android:padding="@dimen/dp_8">

                    <androidx.cardview.widget.CardView
                        android:layout_width="@dimen/dp_100"
                        android:layout_height="wrap_content"
                        android:elevation="0dp"
                        app:cardElevation="0dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <ImageView
                            android:id="@+id/chat_attachment_link_photoClip"
                            android:layout_width="@dimen/dp_100"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:maxHeight="@dimen/dp_140"
                            tools:ignore="ContentDescription" />
                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/dp_8"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <vn.techres.line.widget.AppTextViewBold
                            android:id="@+id/chat_attachment_link_titleClip"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:maxLines="2"
                            android:textColor="@color/black"
                            android:textSize="@dimen/sp_16" />

                        <vn.techres.line.widget.AppTextView
                            android:id="@+id/chat_attachment_link_descriptionClip"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:maxLines="4"
                            android:textColor="@color/black"
                            android:textSize="@dimen/sp_16" />
                    </LinearLayout>
                </LinearLayout>

                <com.pierfrancescosoffritti.androidyoutubeplayer.core.player.views.YouTubePlayerView
                    android:id="@+id/youtubeClip"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_200"
                    android:layout_toStartOf="@+id/chat_attachment_link_deleteClip"
                    android:padding="@dimen/dp_8"
                    android:visibility="visible"
                    app:autoPlay="false" />

                <ImageView
                    android:id="@+id/chat_attachment_link_deleteClip"
                    android:layout_width="@dimen/dp_32"
                    android:layout_height="@dimen/dp_32"
                    android:layout_alignParentEnd="true"
                    android:clickable="true"
                    android:focusable="true"
                    android:paddingTop="@dimen/dp_8"
                    app:srcCompat="@drawable/ic_remove"
                    tools:ignore="ContentDescription" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0_5"
                android:layout_margin="@dimen/dp_8"
                android:background="@color/gray_bg" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingBottom="@dimen/dp_8">

                <vn.techres.line.widget.AppTextView
                    android:id="@+id/sendClip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:minWidth="@dimen/dp_40"
                    android:text="@string/send_link_copy"
                    android:textColor="@color/blue"
                    android:textSize="@dimen/sp_14" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</layout>
