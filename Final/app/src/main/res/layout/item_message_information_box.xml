<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:id="@+id/llContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_4"
        android:orientation="vertical">

        <include
            android:id="@+id/new_message"
            layout="@layout/item_new_message_header_chat" />

        <include
            android:id="@+id/time"
            layout="@layout/item_time_header_message" />

        <LinearLayout
            android:id="@+id/llMessage"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/dp_16"
            android:layout_marginEnd="@dimen/dp_16"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivAvatar"
                android:layout_width="@dimen/dp_32"
                android:layout_height="@dimen/dp_32"
                android:contentDescription="@string/description_place_image"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_user_default" />

            <RelativeLayout
                android:id="@+id/rlMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/llText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_16"
                    android:background="@drawable/bg_chat_group_left"
                    android:orientation="vertical">

                    <vn.techres.line.widget.AppTextViewBold
                        android:id="@+id/tvNameMedia"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:inputType="textMultiLine|textNoSuggestions"
                        android:paddingStart="@dimen/dp_8"
                        android:paddingTop="@dimen/dp_8"
                        android:paddingEnd="@dimen/dp_8"
                        android:textColor="@color/gray_900"
                        android:textSize="@dimen/sp_14"
                        tools:text="Tên nhà hàng" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/transparent"
                        android:orientation="vertical"
                        android:padding="@dimen/dp_8">

                        <com.aghajari.emojiview.view.AXEmojiTextView
                            android:id="@+id/tvMessage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/dp_4"
                            android:autoLink="web"
                            android:gravity="start"
                            android:lineSpacingExtra="@dimen/dp_3"
                            android:lineSpacingMultiplier="1.1"
                            android:maxWidth="@dimen/dp_260"
                            android:minWidth="@dimen/dp_90"
                            android:textColor="@color/gray_900"
                            android:textColorLink="@color/color_link"
                            android:textSize="@dimen/sp_14"
                            app:emojiSize="@dimen/dp_18"
                            tools:text="Nội dung message ở đây" />

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cvImageOne"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="@dimen/dp_8"
                            android:background="@drawable/bg_chat_group_image"
                            app:cardCornerRadius="@dimen/dp_8"
                            app:cardElevation="0dp">

                            <ImageView
                                android:id="@+id/ivMedia"
                                android:layout_width="@dimen/dp_200"
                                android:layout_height="@dimen/dp_200"
                                android:adjustViewBounds="true"
                                android:contentDescription="@string/description_place_image"
                                android:maxWidth="@dimen/dp_280"
                                android:scaleType="centerCrop"
                                tools:src="@drawable/imv_beer" />

                        </androidx.cardview.widget.CardView>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <vn.techres.line.widget.AppTextView
                                android:id="@+id/tvTime"
                                style="@style/ChatTimeStyle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:clickable="false"
                                android:minWidth="@dimen/dp_12"
                                android:textColor="@color/gray_500"
                                android:textSize="@dimen/sp_12"
                                android:visibility="visible"
                                tools:text="09:35" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/btnSeeDetail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_button_bottom_orange"
                        android:orientation="vertical">

                        <vn.techres.line.widget.AppTextViewBold
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="@dimen/dp_14"
                            android:text="@string/watch_detail"
                            android:textAllCaps="true"
                            android:textColor="@color/white"
                            android:textSize="@dimen/sp_14"
                            android:textStyle="bold" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@+id/llText"
                    android:layout_alignBottom="@+id/llText"
                    android:layout_marginBottom="-12dp"
                    android:visibility="gone">

                    <include
                        android:id="@+id/reaction"
                        layout="@layout/item_reaction_icon_message" />

                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>
</layout>