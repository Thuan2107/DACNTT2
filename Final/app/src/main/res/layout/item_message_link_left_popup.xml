<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:id="@+id/llContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_4"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/llMessage"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="@dimen/dp_16"
            android:orientation="horizontal"
            tools:ignore="UselessParent">

            <LinearLayout
                android:id="@+id/llAvatar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom">

                <ImageView
                    android:id="@+id/ivAvatar"
                    android:layout_width="@dimen/dp_32"
                    android:layout_height="@dimen/dp_32"
                    android:contentDescription="@string/description_place_image"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_user_default" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_8"
                android:gravity="start"
                android:orientation="vertical"
                tools:ignore="RtlSymmetry,UselessParent">

                <vn.techres.line.widget.AppTextViewBold
                    android:id="@+id/tvNameMedia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_4"
                    android:background="@drawable/border_gray_100"
                    android:inputType="textMultiLine|textNoSuggestions"
                    android:paddingHorizontal="@dimen/dp_8"
                    android:paddingVertical="@dimen/dp_2"
                    android:textColor="@color/gray_900"
                    android:textSize="@dimen/sp_14"
                    tools:text="Tên người chat" />

                <LinearLayout
                    android:id="@+id/llText"
                    android:layout_width="@dimen/dp_270"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_chat_group_left"
                    android:orientation="vertical">

                    <com.aghajari.emojiview.view.AXEmojiTextView
                        android:id="@id/tvMessage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:autoLink="web"
                        android:lineSpacingExtra="@dimen/dp_3"
                        android:maxWidth="@dimen/dp_260"
                        android:minWidth="@dimen/dp_90"
                        android:paddingStart="@dimen/dp_8"
                        android:paddingTop="@dimen/dp_8"
                        android:paddingBottom="@dimen/dp_8"
                        android:textColor="@color/color_text_chat"
                        android:textColorLink="@color/color_link"
                        android:textSize="@dimen/sp_16"
                        app:emojiSize="@dimen/dp_20"
                        tools:text="https://aloline.com.vn" />

                    <LinearLayout
                        android:id="@+id/llLink"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/llNewFeedLinkPost"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:visibility="visible">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/dp_100"
                                android:layout_gravity="center">

                                <ImageView
                                    android:id="@+id/ivMediaThumbPost"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:maxHeight="@dimen/dp_240"
                                    tools:ignore="ContentDescription,TooDeepLayout"
                                    tools:src="@drawable/ic_default_post" />

                                <ImageView
                                    android:id="@+id/youtube"
                                    android:layout_width="@dimen/dp_48"
                                    android:layout_height="@dimen/dp_48"
                                    android:layout_centerInParent="true"
                                    android:src="@drawable/ic_youtube"
                                    android:visibility="gone"
                                    tools:ignore="ContentDescription" />

                            </RelativeLayout>

                            <vn.techres.line.widget.AppTextViewBold
                                android:id="@+id/tvMediaTitlePost"
                                style="@style/LinkTitle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="@dimen/dp_8"
                                android:layout_marginEnd="@dimen/dp_8"
                                android:clickable="false"
                                android:ellipsize="end"
                                android:inputType="textMultiLine|textNoSuggestions"
                                android:longClickable="false"
                                android:paddingTop="@dimen/dp_8"
                                tools:text="Mạng xã hội Aloline" />

                            <vn.techres.line.widget.AppTextView
                                android:id="@+id/tvMediaSubTitlePost"
                                style="@style/LinkSubTitle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="@dimen/dp_8"
                                android:layout_marginEnd="@dimen/dp_8"
                                android:clickable="false"
                                android:ellipsize="end"
                                android:inputType="textMultiLine|textNoSuggestions"
                                android:longClickable="false"
                                android:paddingBottom="@dimen/dp_8"
                                android:textColor="@color/black"
                                tools:text="Aloline - Mạng xã hội dành cho các tín đồ ẩm thực" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <vn.techres.line.widget.AppTextView
                                android:id="@+id/tvTime"
                                style="@style/ChatTimeStyle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:minWidth="@dimen/sp_12"
                                android:paddingStart="@dimen/dp_8"
                                android:paddingEnd="@dimen/dp_8"
                                android:paddingBottom="@dimen/dp_8"
                                android:textColor="@color/color_time_chat"
                                android:textSize="@dimen/sp_12"
                                tools:text="15:39" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</layout>