<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ctlContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_4"
        android:orientation="vertical">

        <include
            android:id="@+id/new_message"
            layout="@layout/item_new_message_header_chat" />

        <include
            android:id="@+id/time"
            layout="@layout/item_time_header_message" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginEnd="@dimen/dp_16"
            android:orientation="vertical"
            android:visibility="visible"
            tools:ignore="RtlSymmetry,UselessParent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent">

            <RelativeLayout
                android:id="@+id/rllMessageLink"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:orientation="horizontal"
                tools:ignore="UselessParent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/ctlMessage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/ctlText"
                        android:layout_width="@dimen/dp_270"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_chat_group_right"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintRight_toRightOf="parent">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="end"
                            android:orientation="vertical"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent">

                            <com.aghajari.emojiview.view.AXEmojiTextView
                                android:id="@id/tvMessage"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:autoLink="web"
                                android:lineSpacingExtra="@dimen/dp_3"
                                android:maxWidth="@dimen/dp_260"
                                android:minWidth="@dimen/dp_90"
                                android:paddingStart="@dimen/dp_8"
                                android:paddingTop="@dimen/dp_8"
                                android:paddingBottom="@dimen/dp_8"
                                android:textColor="@color/color_text_chat"
                                android:textColorLink="@color/color_link"
                                android:textSize="@dimen/sp_16"
                                app:emojiSize="@dimen/dp_20"
                                tools:text="https://aloline.com.vn"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintLeft_toLeftOf="parent"/>

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:id="@+id/ctlLink"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/tvMessage"
                                android:orientation="vertical">

                                <include
                                    android:id="@+id/link"
                                    layout="@layout/item_link_message" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    app:layout_constraintTop_toBottomOf="@+id/link"
                                    app:layout_constraintLeft_toLeftOf="parent">

                                    <vn.techres.line.widget.AppTextView
                                        android:id="@+id/tvTime"
                                        style="@style/ChatTimeStyle"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:minWidth="@dimen/sp_12"
                                        android:paddingStart="@dimen/dp_8"
                                        android:paddingEnd="@dimen/dp_8"
                                        android:paddingBottom="@dimen/dp_8"
                                        android:textColor="@color/color_time_chat"
                                        android:textSize="@dimen/sp_12"
                                        tools:ignore="TooDeepLayout"
                                        tools:text="15:39" />

                                </LinearLayout>

                            </androidx.constraintlayout.widget.ConstraintLayout>

                        </RelativeLayout>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-12dp"
                        app:layout_constraintTop_toBottomOf="@+id/ctlText"
                        app:layout_constraintRight_toRightOf="parent">

                        <include
                            android:id="@+id/reaction"
                            layout="@layout/item_reaction_icon_message" />

                    </RelativeLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/llView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@+id/rllMessageLink"
                app:layout_constraintRight_toRightOf="parent">

                <include
                    android:id="@+id/send"
                    layout="@layout/item_send_message" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rcvUserView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

                <LinearLayout
                    android:id="@+id/llUserView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="end"
                    android:orientation="horizontal"
                    android:paddingStart="@dimen/dp_4"
                    android:visibility="gone"
                    tools:ignore="RtlSymmetry,UselessParent">

                    <vn.techres.line.widget.AppTextView
                        android:id="@+id/tvMoreView"
                        style="@style/ChatTimeStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/bg_user_view"
                        android:clickable="false"
                        android:duplicateParentState="true"
                        android:gravity="center"
                        android:paddingLeft="@dimen/dp_4"
                        android:paddingTop="@dimen/dp_1"
                        android:paddingRight="@dimen/dp_4"
                        android:paddingBottom="@dimen/dp_1"
                        android:textColor="@color/white"
                        android:textSize="@dimen/sp_10"
                        android:visibility="visible" />

                </LinearLayout>

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>