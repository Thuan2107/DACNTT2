<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_2"
        android:background="@color/white"
        android:orientation="vertical">

        <vn.techres.line.widget.AppTextView
            android:id="@+id/tvHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_16"
            android:paddingVertical="@dimen/dp_8"
            android:textColor="@color/gray_900"
            android:textSize="@dimen/sp_14"
            android:visibility="gone"
            tools:text="20/11/2023" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_16"
            app:layout_constraintEnd_toStartOf="@+id/btnUtilitiesOne"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="UselessParent">

            <vn.techres.line.widget.AppTextViewBold
                android:id="@+id/tvLogo"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40"
                android:layout_gravity="center"
                android:background="@drawable/logo_mp3"
                android:gravity="center_horizontal|top"
                android:paddingTop="@dimen/dp_4"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_10"
                android:textStyle="bold"
                tools:ignore="ContentDescription"
                tools:text="mp3" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_8"
                android:layout_weight="1"
                android:orientation="vertical">

                <vn.techres.line.widget.AppTextView
                    android:id="@+id/tvNameFile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_16"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_12"
                    tools:text="Techres.docx" />

                <vn.techres.line.widget.AppTextView
                    android:id="@+id/tvKB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_4"
                    android:layout_marginBottom="@dimen/dp_16"
                    android:drawableLeft="@drawable/ic_download_blue"
                    android:drawablePadding="@dimen/dp_4"
                    android:gravity="center"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textSize="@dimen/sp_12"
                    tools:text="38 KB・Bùm Nguyễn" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/bg_detail" />

            </LinearLayout>

            <ImageView
                android:id="@+id/btnUtilitiesOne"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dp_8"
                android:layout_marginEnd="@dimen/dp_16"
                android:layout_marginBottom="@dimen/dp_8"
                android:background="@null"
                android:src="@drawable/ic_more_chat"
                tools:ignore="ContentDescription" />

        </LinearLayout>

    </LinearLayout>

</layout>