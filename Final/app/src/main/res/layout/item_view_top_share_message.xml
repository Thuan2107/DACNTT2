<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/tbHeader"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_48"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/lnHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_16"
                tools:ignore="UselessParent">

                <ImageButton
                    android:id="@+id/ibClose"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/bg_ripple_animation_button_back"
                    android:contentDescription="@string/description_place_image"
                    android:src="@drawable/ic_delete_white"
                    android:visibility="visible"
                    app:tint="@color/black" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_8"
                    android:orientation="vertical">

                    <vn.techres.line.widget.AppTextViewBold
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:text="@string/share_message"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_14" />

                    <vn.techres.line.widget.AppTextView
                        android:id="@+id/tvChooseChat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="@dimen/sp_12" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llGroupChat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/gray_100"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/gray_100"
                android:orientation="vertical">

                <androidx.appcompat.widget.SearchView
                    android:id="@+id/svFriend"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp_8"
                    android:background="@drawable/bg_search"
                    android:gravity="center_vertical"
                    android:theme="@style/SearchView"
                    app:closeIcon="@drawable/close_icon"
                    app:iconifiedByDefault="false"
                    app:queryBackground="@android:color/transparent"
                    app:queryHint="@string/search"
                    app:searchIcon="@drawable/ic_search" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal">

                <vn.techres.line.widget.AppTextView
                    android:id="@+id/tvLately"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp_8"
                    android:background="@drawable/bg_form_input_on"
                    android:drawablePadding="@dimen/dp_4"
                    android:paddingStart="@dimen/dp_8"
                    android:paddingTop="@dimen/dp_8"
                    android:paddingEnd="@dimen/dp_8"
                    android:paddingBottom="@dimen/dp_8"
                    android:text="@string/all"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_14" />

                <vn.techres.line.widget.AppTextView
                    android:id="@+id/tvGroupChat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp_8"
                    android:background="@drawable/bg_search"
                    android:drawablePadding="@dimen/dp_4"
                    android:paddingStart="@dimen/dp_8"
                    android:paddingTop="@dimen/dp_8"
                    android:paddingEnd="@dimen/dp_8"
                    android:paddingBottom="@dimen/dp_8"
                    android:text="@string/group_conversation"
                    android:textColor="@color/main_bg"
                    android:textSize="@dimen/sp_14"
                    android:visibility="visible" />

                <vn.techres.line.widget.AppTextView
                    android:id="@+id/tvFriend"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp_8"
                    android:background="@drawable/bg_search"
                    android:drawablePadding="@dimen/dp_4"
                    android:paddingStart="@dimen/dp_8"
                    android:paddingTop="@dimen/dp_8"
                    android:paddingEnd="@dimen/dp_8"
                    android:paddingBottom="@dimen/dp_8"
                    android:text="@string/friend"
                    android:textColor="@color/main_bg"
                    android:textSize="@dimen/sp_14" />

            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/gray_100" />

    </LinearLayout>

</layout>