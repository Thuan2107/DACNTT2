<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ctlContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp_4"
        android:orientation="vertical">

        <include
            android:id="@+id/new_message"
            layout="@layout/item_new_message_header_chat" />

        <include
            android:id="@+id/time"
            layout="@layout/item_time_header_message" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ctlMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginEnd="@dimen/dp_16"
            android:layout_marginBottom="@dimen/dp_4"
            android:orientation="vertical"
            android:visibility="visible"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/ctlText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:orientation="horizontal"
                tools:ignore="UselessParent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent">

                <LinearLayout
                    android:id="@+id/llText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_8"
                    android:background="@drawable/bg_chat_group_right"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:paddingHorizontal="@dimen/dp_16"
                    android:paddingTop="@dimen/dp_14"
                    android:paddingBottom="@dimen/dp_10"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintRight_toRightOf="parent">

                    <include
                        android:id="@+id/audio"
                        layout="@layout/item_message_audio" />

                    <vn.techres.line.widget.AppTextView
                        android:id="@+id/tvTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_4"
                        android:gravity="center_vertical"
                        android:textColor="@color/gray_600"
                        android:textSize="@dimen/sp_12"
                        android:visibility="visible"
                        tools:text="09:35"
                        app:layout_constraintTop_toBottomOf="@+id/audio"
                        app:layout_constraintLeft_toLeftOf="parent"/>

                </LinearLayout>

<!--                <View-->
<!--                    android:layout_width="@dimen/dp_14"-->
<!--                    android:layout_height="@dimen/dp_14"-->
<!--                    android:layout_below="@+id/llText" />-->

                <LinearLayout
                    android:id="@+id/llReaction"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@+id/llText"
                    android:layout_alignBottom="@+id/llText"
                    android:layout_marginTop="-12dp"
                    app:layout_constraintTop_toBottomOf="@+id/llText"
                    app:layout_constraintRight_toRightOf="parent">

                    <include
                        android:id="@+id/reaction"
                        layout="@layout/item_reaction_icon_message" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/llText"
                    android:layout_alignEnd="@+id/llText"
                    android:layout_gravity="end"
                    android:layout_marginTop="@dimen/dp_8"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:visibility="visible"
                    app:layout_constraintTop_toBottomOf="@+id/llText"
                    app:layout_constraintRight_toRightOf="parent">

                    <include
                        android:id="@+id/send"
                        layout="@layout/item_send_message" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rcvUserView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:visibility="gone"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

                    <LinearLayout
                        android:id="@+id/llUserView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="end"
                        android:orientation="horizontal"
                        android:paddingStart="@dimen/dp_4"
                        android:visibility="visible"
                        tools:ignore="RtlSymmetry,UselessParent">

                        <vn.techres.line.widget.AppTextView
                            android:id="@+id/tvMoreView"
                            style="@style/ChatTimeStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="@drawable/bg_user_view"
                            android:clickable="false"
                            android:duplicateParentState="true"
                            android:gravity="center"
                            android:inputType="textMultiLine|textNoSuggestions"
                            android:paddingLeft="@dimen/dp_4"
                            android:paddingTop="@dimen/dp_1"
                            android:paddingRight="@dimen/dp_4"
                            android:paddingBottom="@dimen/dp_1"
                            android:textColor="@color/white"
                            android:textSize="@dimen/sp_10"
                            android:visibility="visible" />
                    </LinearLayout>

                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>