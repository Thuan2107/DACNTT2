<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:id="@+id/layoutContainer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

            </LinearLayout>

        </FrameLayout>

        <vn.techres.line.chat.widget.TagRecyclerView
            android:id="@+id/rcvUserTag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white90"
            android:scrollbars="none"
            android:visibility="gone"
            tools:ignore="MissingConstraints"
            tools:listitem="@layout/item_user_tag" />

        <LinearLayout
            android:id="@+id/llReplyMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border_radius_top_8dp"
            android:orientation="vertical"
            android:visibility="gone">

            <include
                android:id="@+id/reply"
                layout="@layout/item_attachment_reply" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llLinkMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <include
                android:id="@+id/link"
                layout="@layout/item_attachment_recommend_link" />

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/searchSticker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal"
            android:visibility="gone"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/item_sticker_chat" />

        <include
            android:id="@+id/inputChat"
            layout="@layout/item_input_chat" />
        <RelativeLayout
            android:id="@+id/countMessSearch"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:background="@drawable/background_input_chat"
            android:visibility="gone">

            <vn.techres.line.widget.AppTextView
                android:id="@+id/messCountSearch"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_centerInParent="true"
                android:layout_marginHorizontal="@dimen/dp_8"
                android:layout_toLeftOf="@+id/llActionFindMess"
                android:gravity="center"
                android:textColor="@color/gray_500"
                android:textSize="@dimen/sp_14"
                tools:ignore="RelativeOverlap,TooDeepLayout"
                tools:text="Kết quả thứ 100/100" />

            <LinearLayout
                android:id="@+id/llActionFindMess"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/countUp"
                    android:layout_width="@dimen/dp_24"
                    android:layout_height="@dimen/dp_24"
                    android:layout_marginEnd="@dimen/dp_8"
                    android:src="@drawable/ic_up_chat"
                    android:visibility="visible"
                    tools:ignore="ContentDescription" />

                <ImageView
                    android:id="@+id/countDown"
                    android:layout_width="@dimen/dp_24"
                    android:layout_height="@dimen/dp_24"
                    android:layout_marginEnd="@dimen/dp_8"
                    android:src="@drawable/ic_down"
                    android:visibility="visible"
                    tools:ignore="ContentDescription" />

            </LinearLayout>

        </RelativeLayout>
        <com.aghajari.emojiview.view.AXEmojiPopupLayout
            android:id="@+id/emojiPopupLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible" />

        <LinearLayout
            android:id="@+id/extensions"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_200"
            android:background="@color/white"
            android:orientation="vertical"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/llShareLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp_16"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="@dimen/dp_50"
                        android:layout_height="@dimen/dp_50"
                        android:layout_gravity="center"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_share_location"
                        tools:ignore="ContentDescription" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_8"
                        android:layout_marginBottom="@dimen/dp_8"
                        android:text="@string/location" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llSendFile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp_16"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/dp_50"
                        android:layout_height="@dimen/dp_50"
                        android:layout_gravity="center"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_send_file"
                        tools:ignore="ContentDescription" />

                    <vn.techres.line.widget.AppTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_8"
                        android:layout_marginBottom="@dimen/dp_8"
                        android:text="@string/document" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llAppointmentRemind"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp_16"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="@dimen/dp_50"
                        android:layout_height="@dimen/dp_50"
                        android:layout_gravity="center"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_appointment_reminder"
                        tools:ignore="ContentDescription" />

                    <vn.techres.line.widget.AppTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_8"
                        android:layout_marginBottom="@dimen/dp_8"
                        android:text="@string/appointment_reminder" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llVote"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dp_16"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <ImageView
                        android:layout_width="@dimen/dp_50"
                        android:layout_height="@dimen/dp_50"
                        android:layout_gravity="center"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_vote"
                        tools:ignore="ContentDescription" />

                    <vn.techres.line.widget.AppTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_8"
                        android:layout_marginBottom="@dimen/dp_8"
                        android:text="@string/vote" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/llGif"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_16"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:visibility="gone">

                <ImageView
                    android:layout_width="@dimen/dp_50"
                    android:layout_height="@dimen/dp_50"
                    android:layout_gravity="center"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_search_gif"
                    tools:ignore="ContentDescription" />

                <vn.techres.line.widget.AppTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_8"
                    android:layout_marginBottom="@dimen/dp_8"
                    android:text="@string/search_gif" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lnMic"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_200"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone">

            <Chronometer
                android:id="@+id/time_audio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_8"
                android:textColor="@color/main_bg"
                android:textSize="@dimen/sp_16"
                android:visibility="gone" />

            <vn.techres.line.widget.AppTextView
                android:id="@+id/titleAudio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_8"
                android:text="@string/long_press_record" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                tools:ignore="DisableBaselineAlignment">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/removeAudio"
                        android:layout_width="@dimen/dp_32"
                        android:layout_height="@dimen/dp_32"
                        android:visibility="invisible"
                        tools:ignore="ContentDescription" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/moveLeft"
                        android:layout_width="@dimen/dp_24"
                        android:layout_height="@dimen/dp_24"
                        android:layout_marginEnd="@dimen/dp_8"
                        android:src="@drawable/ic_audio_mov_left_24"
                        android:visibility="invisible"
                        tools:ignore="ContentDescription" />

                    <ImageView
                        android:id="@+id/onMic"
                        android:layout_width="@dimen/dp_100"
                        android:layout_height="@dimen/dp_100"
                        tools:ignore="ContentDescription" />

                    <ImageView
                        android:id="@+id/moveRight"
                        android:layout_width="@dimen/dp_24"
                        android:layout_height="@dimen/dp_24"
                        android:layout_marginStart="@dimen/dp_8"
                        android:src="@drawable/ic_audio_mov_right_24"
                        android:visibility="invisible"
                        tools:ignore="ContentDescription" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/freeHand"
                        android:layout_width="@dimen/dp_32"
                        android:layout_height="@dimen/dp_32"
                        android:visibility="invisible"
                        tools:ignore="ContentDescription" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>



        <LinearLayout
            android:id="@+id/llBlockView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:visibility="gone">

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0_5"
                android:background="@color/gray_100" />

            <LinearLayout
                android:id="@+id/llMyBlock"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingHorizontal="@dimen/dp_16"
                android:paddingVertical="@dimen/dp_8"
                android:visibility="gone">

                <vn.techres.line.widget.AppTextViewBold
                    android:id="@+id/tvTitleBlock"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="@dimen/dp_2"
                    android:textColor="@color/gray_900"
                    android:textSize="@dimen/sp_12"
                    android:textStyle="bold"
                    tools:text="@string/you_have_block_this_account" />

                <vn.techres.line.widget.AppTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="@dimen/dp_2"
                    android:text="@string/content_block_chat"
                    android:textColor="@color/gray_500"
                    android:textSize="@dimen/sp_12" />

                <vn.techres.line.widget.AppTextViewBold
                    android:id="@+id/btnUnlock"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/dp_8"
                    android:background="@drawable/bg_btn_gray_border_8dp"
                    android:gravity="center"
                    android:padding="@dimen/dp_8"
                    android:text="@string/unlock"
                    android:textAllCaps="false"
                    android:textColor="@color/gray_900"
                    android:textSize="@dimen/sp_14"
                    android:textStyle="bold"
                    tools:ignore="ContentDescription" />

            </LinearLayout>

            <vn.techres.line.widget.AppTextView
                android:id="@+id/tvTheirBlock"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center"
                android:padding="@dimen/dp_16"
                android:text="@string/can_not_contact_with_this_account_now"
                android:textColor="@color/gray_500"
                android:textSize="@dimen/sp_12"
                android:visibility="gone" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llDeleteAccountView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:visibility="gone">

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0_5"
                android:background="@color/gray_100" />

            <vn.techres.line.widget.AppTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center"
                android:padding="@dimen/dp_16"
                android:text="@string/cannot_contact_to_this_account"
                android:textColor="@color/gray_500"
                android:textSize="@dimen/sp_12" />

        </LinearLayout>

    </LinearLayout>
</layout>