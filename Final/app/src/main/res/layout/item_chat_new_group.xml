<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_48"
            android:layout_marginBottom="@dimen/dp_48"
            android:elevation="@dimen/dp_0_1"
            app:cardCornerRadius="@dimen/dp_8"
            app:cardElevation="@dimen/dp_0_1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_radius_top_20"
                android:elevation="@dimen/dp_0_1"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingVertical="@dimen/dp_16">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/ivAvatarUser1"
                        android:layout_width="@dimen/dp_48"
                        android:layout_height="@dimen/dp_48"
                        android:contentDescription="@string/description_place_image"
                        android:src="@drawable/ic_user_default"
                        android:visibility="visible" />

                    <ImageView
                        android:id="@+id/ivAvatarUser2"
                        android:layout_width="@dimen/dp_48"
                        android:layout_height="@dimen/dp_48"
                        android:layout_marginStart="-10dp"
                        android:layout_toEndOf="@+id/ivAvatarUser1"
                        android:src="@drawable/ic_user_default"
                        android:visibility="visible"
                        tools:ignore="ContentDescription" />

                    <ImageView
                        android:id="@+id/ivAvatarUser3"
                        android:layout_width="@dimen/dp_48"
                        android:layout_height="@dimen/dp_48"
                        android:layout_marginStart="-10dp"
                        android:layout_toEndOf="@+id/ivAvatarUser2"
                        android:contentDescription="@string/description_place_image"
                        android:src="@drawable/ic_user_default"
                        android:visibility="visible" />

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_8"
                    android:orientation="vertical">

                    <vn.techres.line.widget.AppTextView
                        android:id="@+id/tvNewMessage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="@color/gray_900"
                        android:textSize="@dimen/sp_14"
                        tools:text="Bạn và Nguyễn Khánh Duy đã trở thành bạn bè" />

                    <vn.techres.line.widget.AppTextView
                        android:id="@+id/tvClickSticker"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="@dimen/dp_8"
                        android:gravity="center"
                        android:text="@string/pick_one_sticker_to_say_hello"
                        android:textColor="@color/gray_500"
                        android:textSize="@dimen/sp_12" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rcvSticker"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginHorizontal="@dimen/dp_8"
                        android:gravity="center"
                        android:orientation="horizontal"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        tools:itemCount="4"
                        tools:listitem="@layout/item_sticker_new_message" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</layout>