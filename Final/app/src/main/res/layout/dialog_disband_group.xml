<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        tools:context=".ui.dialog.DialogChooseAddress">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="@dimen/dp_16">

            <vn.techres.line.widget.AppTextViewBold
                android:id="@+id/tvTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/disband_group"
                android:textColor="@color/black"
                android:textSize="@dimen/sp_16" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <View
                android:id="@+id/view_title"
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_size"
                android:background="@color/common_line_color"
                android:visibility="visible" />
            <LinearLayout
                android:layout_width="match_parent"
                android:visibility="visible"
                android:layout_height="wrap_content">
                <vn.techres.line.widget.AppTextView
                    android:id="@+id/tvContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_8"
                    android:layout_marginHorizontal="@dimen/dp_8"
                    android:layout_marginBottom="@dimen/dp_8"
                    android:textSize="@dimen/sp_14"
                    android:text= "Mời tất cả mọi người rời nhóm và xoá tin nhắn? Nhóm sẽ giải tán và KHÔNG THỂ khôi phục."/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <vn.techres.line.widget.AppTextViewBold
                    android:id="@+id/tvOutGroupCancel"
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/bg_confirm"
                    android:focusable="true"
                    android:gravity="center"
                    android:paddingVertical="@dimen/dp_15"
                    android:text="@string/no"
                    android:textColor="@color/common_cancel_text_color"
                    android:textSize="@dimen/sp_14" />

                <View
                    android:id="@+id/vUiLine"
                    android:layout_width="@dimen/line_size"
                    android:layout_height="match_parent"
                    android:background="@color/common_line_color" />

                <vn.techres.line.widget.AppTextViewBold
                    android:id="@+id/tvOutGroup"
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:focusable="true"
                    android:gravity="center"
                    android:background="@color/main_bg"
                    android:paddingVertical="@dimen/dp_15"
                    android:text="@string/disband"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp_14" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</layout>