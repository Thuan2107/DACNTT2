<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        tools:context=".ui.activity.MembershipCardManagerActivity">

        <com.hjq.bar.TitleBar
            android:id="@+id/tbHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/main_bg"
            android:elevation="0dp"
            app:lineVisible="false"
            app:title="@string/title_detail_media"
            app:titleStyle="normal" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/bg_detail" />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone">

                <androidx.appcompat.widget.SearchView
                    android:id="@+id/svSaveBranch"
                    android:layout_width="@dimen/dp_192"
                    android:layout_height="@dimen/dp_32"
                    android:layout_margin="@dimen/dp_8"
                    android:background="@drawable/bg_search"
                    android:gravity="center_vertical"
                    android:theme="@style/SearchView"
                    app:closeIcon="@drawable/close_icon"
                    app:iconifiedByDefault="false"
                    app:queryBackground="@android:color/transparent"
                    app:queryHint="@string/search"
                    app:searchIcon="@drawable/ic_search_choose_restaurant" />

                <vn.techres.line.widget.AppTextView
                    android:id="@+id/tvAll"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_32"
                    android:layout_margin="@dimen/dp_8"
                    android:background="@drawable/bg_search"
                    android:backgroundTint="@color/main_bg"
                    android:drawablePadding="@dimen/dp_4"
                    android:paddingStart="@dimen/dp_8"
                    android:paddingTop="@dimen/dp_8"
                    android:paddingEnd="@dimen/dp_8"
                    android:paddingBottom="@dimen/dp_8"
                    android:text="@string/all"
                    android:textColor="@color/white" />

                <vn.techres.line.widget.AppTextView
                    android:id="@+id/tvFollowers"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_32"
                    android:layout_margin="@dimen/dp_8"
                    android:background="@drawable/bg_search"
                    android:drawableLeft="@drawable/ic_profile"
                    android:drawablePadding="@dimen/dp_4"
                    android:paddingStart="@dimen/dp_8"
                    android:paddingTop="@dimen/dp_8"
                    android:paddingEnd="@dimen/dp_8"
                    android:paddingBottom="@dimen/dp_8"
                    android:text="@string/subscriber"
                    android:textColor="@color/main_bg" />

                <vn.techres.line.widget.AppTextView
                    android:id="@+id/tvByTheTime"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_32"
                    android:layout_margin="@dimen/dp_8"
                    android:background="@drawable/bg_search"
                    android:drawableLeft="@drawable/ic_time"
                    android:drawablePadding="@dimen/dp_4"
                    android:drawableTint="@color/main_bg"
                    android:paddingStart="@dimen/dp_8"
                    android:paddingTop="@dimen/dp_8"
                    android:paddingEnd="@dimen/dp_8"
                    android:paddingBottom="@dimen/dp_8"
                    android:text="@string/bythetime"
                    android:textColor="@color/main_bg" />

                <vn.techres.line.widget.AppTextView
                    android:id="@+id/tvVideo"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_32"
                    android:layout_margin="@dimen/dp_8"
                    android:background="@drawable/bg_search"
                    android:drawableLeft="@drawable/ic_camera_qr"
                    android:drawablePadding="@dimen/dp_4"
                    android:drawableTint="@color/main_bg"
                    android:paddingStart="@dimen/dp_8"
                    android:paddingTop="@dimen/dp_8"
                    android:paddingEnd="@dimen/dp_8"
                    android:paddingBottom="@dimen/dp_8"
                    android:text="@string/video"
                    android:textColor="@color/main_bg" />

            </LinearLayout>
        </HorizontalScrollView>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1_5"
            android:background="@color/bg_detail" />

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:elevation="0dp"
            android:visibility="visible"
            app:elevation="0dp">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcvTab"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:elevation="0dp"
                android:orientation="vertical"
                tools:itemCount="3"
                tools:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                tools:spanCount="3" />
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/gray_300"/>
        </com.google.android.material.appbar.AppBarLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1_5"
            android:background="@color/bg_detail" />

        <vn.techres.widget.layout.NestedViewPager
            android:id="@+id/nsvPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior" />
    </LinearLayout>
</layout>